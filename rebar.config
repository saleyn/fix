{pre_hooks,
  [{"(linux|darwin|solaris)", compile, "make nif"},
   {"(freebsd)", compile, "gmake nif"},
   {clean, "rm -vf c_src/fix_fields*.cpp src/fix_{fields,decoder,groups}*.erl include/fix_{adm,app}_msgs*.hrl priv/*.so c_src/*.o"}
  ]}.

{erl_opts,
 [
   warn_unused_vars,
   warn_export_all,
   warn_shadow_vars,
   warn_unused_import,
   nowarn_unused_function,
   warn_bif_clash,
   warn_unused_record,
   warn_deprecated_function,
   warn_obsolete_guard,
   strict_validation,
   warn_export_vars,
   warn_exported_vars,
%   warn_missing_spec,
%   warn_untyped_record,
%   warnings_as_errors,
   debug_info
 ]
}.

{deps, [
  {parse_trans, "~> 3.3.1"},
  {etran,       "~> 0.3"},
  {util,        "~> 1.0"}
]}.

{profiles,
    [{test,
         [{deps,
              [meck]},
          {erl_opts,
              [nowarn_export_all,
               debug_info,
               nowarn_missing_spec,
               nowarn_unused_vars
               ]
          }
         ]
     }
    ]
}.
